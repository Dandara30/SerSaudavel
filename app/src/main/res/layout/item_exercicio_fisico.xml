<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivIcone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_crossfit" />

    <LinearLayout
        android:id="@+id/conteudo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivIcone"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNomeAtividade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_screen"
            tools:text="Crossfit"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_screen"
            tools:text="09:00 Ã s 10:00"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:id="@+id/vLinha"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/linha"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/conteudo"/>

</androidx.constraintlayout.widget.ConstraintLayout>